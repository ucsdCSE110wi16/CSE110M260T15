<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ucsd.cse110t15m260.roommateinventory.ApartmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/apt_fragment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_gravity="top|right"/>

    </LinearLayout>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:id="@+id/aptListView"
        android:layout_gravity="left|center" />

    <Button
        android:text="Leave Apartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/leave_apt"
        android:layout_gravity="bottom"/>

    <Button
        android:text="Create Apartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_apt"
        android:layout_gravity="bottom|left"/>

    <Button
        android:text="Join Apartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/join_apt"
        android:layout_gravity="bottom|right"/>


</FrameLayout>